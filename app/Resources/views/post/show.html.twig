<div class="feed__global">
    
<div class="feed__central">
<div class="feed__centralHeader">
    <div class="feed__centralHead">HOTüî•</div>
</div>

<div class="feed__centralPreviousNext">
    <div class="feed__centralPost">Previous post</div>
    <div class="feed__centralNext">Next post</div>
</div>

<div class="feed__centralMain">
    
    <div class="feed__centralTitle">
        <div class="title_text">{{ post.title }}</div>
        <div class="title_author">posted by {{ post.author.username }}</div>
        <div class="title_time">{{ post.createdAt|ago }}</div>
    </div>

<div class="feed__centralVideo"><iframe width="710" height="394" src="https://www.youtube.com/embed/DHyUYg8X31c" frameborder="0" allowfullscreen></iframe></div>

<div class="feed__videoDescription">
    <div class="feed__videoInfo">
        <div class="video_titleCategory">
            <div class="video_title">MON RETOUR SUR BLACKOPS</div>
            <div class="video_category">{{ post.category }}</div>
        </div>
        <div class="video_authorSubscribers">
            <div class="video_author">Squeezie</div>
            <div class="video_subscribers">2 394 384 subscribers</div>
        </div>
        <div class="video_hashtags">
            {% for tag in post.tags %}
                <div class="hashtag first_hashtag">#{{ tag }}</div>
            {% endfor %}
        </div>
    </div>
    <div class="feed__descriptionBuzz">
        
        <div class="feed__videoBuzz">
            <div class="video_arrowUp">‚¨ÜÔ∏èÔ∏è</div>
