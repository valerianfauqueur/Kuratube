        </div>
            <div class="video_arrowPoints">{{ post.points }} points</div>
    </div>
</div>
    <div class="feed__videoText">{{ post.content }}</div>
</div>
    <div class="form_comment">
        {% include ':post/comment:new.html.twig' %}
    </div>
    {% for comment in post.comments %}
        {% include ':post/comment:show.html.twig' with {'comment': comment} %}
    {% endfor %}
</div>
<div class="feed__side">
    <a href="{{ path('post_new') }}" ><input type="button" class="button_create" value="CREATE A POST"></a>
    <div class="feed__perso">
        <div class="feed__persoCreate"></div>
        <div class="feed__persoUser">
            <div class="user__description">
                <div class="user__descriptionImage">

                <div class="user__descriptionDetails">
                    <div class="details__user">
                        <div class="details__userName">Axel</div>
                        <div class="details__userFollowers">72 followers</div>
                    </div>
